{% extends 'membre.html.twig' %}

{% block content %}

    <div class="col-md-8 col-md-offset-1 col-sm-8">
        <div class="tab-content">
            <div class="tab-pane active" id="inbox">

                <div class="container">
                    <div class="content-container clearfix">
                        <div class="col-md-12">
                            <h2 class="content-title">Mes groupes</h2>

                            <input type="search" placeholder="Rechercher un groupe" class="form-control mail-search" />


                            <ul class="mail-list">
                                {% for groupe in groupes %}
                                    <li>

                                        <a href="{{ path('groupe_show', { 'id': groupe.id }) }}">
                                            <span class="mail-message-preview">{{ groupe.nomG }}</span>
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    </body>




{% endblock %}
