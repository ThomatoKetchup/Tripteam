{% extends 'membre.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('style/groupe.css') }}" rel="stylesheet" type="text/css" media="screen,projection"/>
{% endblock %}


{% block content %}


    <div class="col-md-10 col-sm-8  main-content">
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center ">
                    <div class="panel panel-default">
                        <div class="userprofile social ">
                            <h2 class="groupname">{{ groupe.nomG }}s</h2>
                            <p>{{ groupe.lieuG }}</p>
                        </div>
                        <div class="col-md-12 border-top border-bottom">


                            <ul class="nav pull-left countlist nav-pills" role="tablist">
                                <li role="presentation">
                                    <h3>{{ groupe.lieuG }}<br>
                                        <small>Lieu</small> </h3>
                                </li>
                                <li role="presentation">
                                    <h3>{{ groupe.dateDebutG|date('d-m-Y') }}<br>
                                        <small>Arrivée</small> </h3>
                                </li>
                                <li role="presentation">
                                    <h3>{{ groupe.dateFinG|date('d-m-Y') }}<br>
                                        <small>Départ</small> </h3>
                                </li>
                            </ul>
                            <button class="btn btn-primary followbtn">Rejoindre ce groupe</button>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <!-- /.col-md-12 -->
                <div class="col-md-4 col-sm-12">

                    <!--Affichage des membres du groupe-->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h1 class="page-header small">Membres</h1>
                        </div>
                        <div class="col-md-12 ">
                            <div class="row">
                                {% for user in users %}

                                    <a href="" class="member"> <img src="{{ asset('user/' ~ user.brochure) }}" class="img-responsive center-block displayimg" alt="Photo de profil">
                                        <div class="memmbername">{{ user.prenom }} {{ user.nom }}</div>
                                    </a>

                                {% endfor %}
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>

                    <!--Affichage des centres d'interets du groupe-->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h1 class="page-header small">Centres d'intérets</h1>
                        </div>
                        <div class="col-md-12">
                            <ul class="list-group">
                                <li class="list-group-item"><span class="fa fa-male"></span> Worked with 1000+ people</li>
                                <li class="list-group-item"><span class="fa fa-institution"></span> 60+ offices</li>
                                <li class="list-group-item"><span class="fa fa-user"></span> 50000+ satify customers</li>
                                <li class="list-group-item"><span class="fa fa-clock-o"></span> Work hours many and many still counting</li>
                                <li class="list-group-item"><span class="fa fa-heart"></span> Customer satisfaction for servics</li>
                            </ul>
                        </div>
                        <div class="clearfix"></div>
                    </div>

                    <!-- Affichage des langues du groupe  -->

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h1 class="page-header small">Langues</h1>
                            <p class="page-subtitle small">Express your self, Express to other</p>
                        </div>
                        <div class="col-md-12">
                            <div class="media">
                                <div class="media-left"> <a href="javascript:void(0)"> <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="" class="media-object"> </a> </div>
                                <div class="media-body">
                                    <h4 class="media-heading">Lucky Sans</h4>
                                    Cras sit amet nibh libero, in gravida nulla. Nulla vel metus scelerisque ante sollicitudin commodo. Cras purus odio. </div>
                            </div>
                            <div class="media">
                                <div class="media-left"> <a href="javascript:void(0)">
                                        <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="" class="media-object"> </a> </div>
                                <div class="media-body">
                                    <h4 class="media-heading">John Doe</h4>
                                    Cras sit amet nibh libero, in gravida nulla. Nulla vel metus scelerisque ante sollicitudin commodo. Cras purus odio. </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>

                <div class="col-md-8 col-sm-12 posttimeline">

                    <!-- Formulaire publications  -->
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="status-upload nopaddingbtm">
                                    {{ form_start(form) }}
                                    <div class="form-group">
                                        {{ form_widget(form.content, {'attr':{'class':'form-control', 'placeholder': "Exprimez vous"}}) }}
                                        {{ form_errors(form.content) }}
                                    </div>
                                    <input type="submit" class="pull-right" value="Publier " />
                                    {{ form_end(form) }}
                            </div>
                        </div>
                    </div>

                    <!--Affichage des publications-->
                    {% for publication in publications %}
                        <div class="panel panel-default">
                            <!--Bouton pour supprimer -->
                            <div class="btn-group pull-right postbtn">
                                <button type="button" class="dotbtn dropdown-toggle" data-toggle="dropdown" aria-expanded="false"> <span class="dots"></span> </button>
                                <ul class="dropdown-menu pull-right" role="menu">
                                    <li><a href="javascript:void(0)">Hide this</a></li>
                                    <li><a href="javascript:void(0)">Report</a></li>
                                </ul>
                            </div>
                            <!--Fin-->

                            <div class="col-md-12">
                                <div class="media">
                                    <div class="media-left">
                                        <a href="javascript:void(0)"> <img src="{{ asset('user/' ~ publication.author.brochure) }}" class=" media-object img-responsive displayimg" alt="Photo de profil">
                                        </a>
                                        <h4 class="media-heading "><div class="pull-left">{{ publication.author.prenom }}</div><br>
                                            <small><i class="fa fa-clock-o"></i> {{ publication.date|date('d-m-Y à H:i') }}</small> </h4>
                                    </div>
                                    <div class="media-body">

                                        <p>{{ publication.content }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                    {% endfor %}


        </div>
    </div>

    </div>
    </div>



    </body>

{% endblock %}



