{% extends 'membre.html.twig' %}
{% block content %}
    Publication
{% endblock %}
{% block body %}
    <h1>Publication</h1>

    <table>
        <tbody>

            <tr>
                <th>Datepublication</th>
                <td>{% if publication.datePublication %}{{ publication.datePublication|date('d-m-Y') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Textepublication</th>
                <td>{{ publication.textePublication }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ publication.image }}"/></td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('publication_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('publication_edit', { 'id': publication.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
