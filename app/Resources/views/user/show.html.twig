{% extends 'membre.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('style/profil.css') }}" rel="stylesheet" type="text/css" media="screen,projection"/>

{% endblock %}


{% block content %}

    <div class="col-md-8 col-md-offset-1 col-sm-8  main-content">


        <div class="row">
            <div class="user-image">
                <div class="logo">
                    <img src="http://lorempixel.com/output/people-q-g-64-64-1.jpg" class="img-responsive center-block logoimg"
                         alt="Logo"></div>
                <h2>{{ user.prenom }} {{ user.nom |  capitalize }}</h2>
            </div>

            {{ app.user.id }} {{ user.id }}

            {% if app.user.id == user.id %}
                <button class="btn btn-primary" data-toggle="modal" data-target="#modifyProfil">Modifiez mon profil</button>
            {% else %}
                <button class="btn btn-primary" data-toggle="modal" data-target="#sendMessage"><i class="fas fa-envelope fa-lg"></i> Envoyez-lui un message</button>
            {% endif %}


            <!--Envoyez un message-->

            <div class="modal fade" id="sendMessage" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                        </div>
                        <div class="modal-body">
                            {{ form_start(message_form) }}
                            {{ form_widget(message_form) }}
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <input type="submit" class="btn btn-primary" value="Envoyer" />
                            {{ form_end(message_form) }}
                        </div>


                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->

            <!--Informations personnelle-->
            <div class="infoperso">
                <h4>Informations personnelles</h4>
                <!-- Bouton execution modal -->
                <!-- Modal -->
                <div class="modal fade" id="modifyProfil" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

                                <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                            </div>
                            <div class="modal-body">
                                {{ form_start(edit_form) }}
                                {{ form_widget(edit_form) }}
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <input type="submit" class="btn btn-primary" value="Edit" />
                                {{ form_end(edit_form) }}
                            </div>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->
                <p>{{ user.textpresentation }}</p>

            </div>
            <hr class="separator">

            <div class="cdi">
                <h4>Centres d'intérêts</h4>
                <ul class="list-inline">
                    <li>Livres policiers,</li>
                    <li> Salut test</li>

                    <li>Le football argentin,</li>

                    <li>Les tigres</li>

                </ul>
            </div>

            <hr class="separator">

            <div class="langues">
                <h4>Langues</h4>
                <ul class="list-inline">
                    {% for langues in user.langues %}
                        <li>{{ langues.nom }}</li>
                    {% endfor %}
                </ul>
            </div>

            <hr class="separator">

            <div class="groups">
                <h4>Groupes</h4>
                <ul class="list-inline">
                    <li><a>Les teufeurs</a></li>

                    <li>Anglais</li>

                    <li>Espagnol</li>

                </ul>

            </div>

            <hr class="separator">

            <div class="voyages">
                <h4>Voyages</h4>
            </div>
        </div>
    </div>
    </div>



    </body>

{% endblock %}
